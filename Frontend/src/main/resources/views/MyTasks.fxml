<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.smarttask_frontend.tasks.controller.MyTasksController"
            prefWidth="1000" prefHeight="650"
            stylesheets="@../styles/tasks.css">

    <!-- ================= HEADER ================= -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="header-bar">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <Label text="My Tasks" styleClass="header-title"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="AI Generate" styleClass="ai-button" onAction="#aiGenerate"/>
            <Button text="+ Add Task" styleClass="add-button" onAction="#createTask"/>
        </HBox>
    </top>

    <!-- ================= TABLE ================= -->
    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="25" right="30" bottom="30" left="30"/>
            </padding>

            <TableView fx:id="taskTable" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <columns>
                    <TableColumn fx:id="titleColumn" text="TASK NAME" prefWidth="300"/>
                    <TableColumn fx:id="priorityColumn" text="PRIORITY" prefWidth="120"/>
                    <TableColumn fx:id="dueDateColumn" text="DUE DATE" prefWidth="150"/>
                    <TableColumn fx:id="statusColumn" text="STATUS" prefWidth="160"/>
                    <TableColumn fx:id="subTasksColumn" text="SUBTASKS" prefWidth="120"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
